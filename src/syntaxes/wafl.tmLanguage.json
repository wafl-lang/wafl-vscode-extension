{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "WAFL",
  "scopeName": "source.wafl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#conditionals" },
    { "include": "#tags" },
    { "include": "#keys" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#null" },
    { "include": "#expressions" },
    { "include": "#operators" }
  ],
  "repository": {
    "conditionals": {
      "patterns": [
        {
          "name": "meta.conditional.list-item.wafl",
          "begin": "^(\\s*-\\s*)(if)\\s+",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.list.begin.wafl" },
            "2": { "name": "keyword.control.conditional.wafl" }
          },
          "end": ":",
          "endCaptures": {
            "0": { "name": "punctuation.separator.key-value.wafl" }
          },
          "patterns": [
            { "include": "#expressions" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#operators" },
            { "include": "#booleans" },
            { "include": "#null" }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.wafl",
          "match": "#.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.directive.wafl",
          "match": "^\\s*@(import|schema|eval|extends)\\b"
        }
      ]
    },
    "tags": {
      "patterns": [
        {
          "name": "entity.name.tag.wafl",
          "match": "![a-zA-Z_][a-zA-Z0-9_-]*\\b"
        }
      ]
    },
    "keys": {
      "patterns": [
        {
          "name": "entity.name.function.wafl",
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_-]*)(<[a-zA-Z0-9_]+>)?\\s*:"
        },
        {
          "name": "entity.name.function.wafl",
          "match": "\\s+([a-zA-Z_][a-zA-Z0-9_-]*)(<[a-zA-Z0-9_]+>)?\\s*:"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.wafl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.wafl",
              "match": "\\\\."
            },
            { "include": "#interpolation" }
          ]
        },
        {
          "name": "string.quoted.single.wafl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.wafl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "interpolation": {
      "patterns": [
        {
          "name": "meta.embedded.expression.wafl",
          "begin": "\\$\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.template-expression.begin.wafl" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.template-expression.end.wafl" }
          },
          "patterns": [
            { "include": "#expressions" }
          ]
        }
      ]
    },
    "expressions": {
      "patterns": [
        {
          "name": "variable.other.env.wafl",
          "match": "\\$[A-Z][A-Z0-9_]*(?:\\.[A-Z0-9_]+)*"
        },
        {
          "name": "variable.other.object.wafl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*\\b"
        },
        {
          "name": "variable.other.wafl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "support.function.wafl",
          "match": "\\b(env|get|set|merge|ref)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.wafl",
          "match": "\\b-?\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.wafl",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "null": {
      "patterns": [
        {
          "name": "constant.language.null.wafl",
          "match": "\\b(null|~)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.wafl",
          "match": "(===|!==|==|!=|<=|>=|<|>|&&|\\|\\||!|\\+|-|\\*|/|%|=)"
        }
      ]
    }
  }
}
